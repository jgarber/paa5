= form_for @key do |f|
  - if @key.errors.any?
    #error_explanation
      %h2= "#{pluralize(@key.errors.count, "error")} prohibited this key from being saved:"
      %ul
        - @key.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :body
    = f.text_area :body
  .actions
    = f.submit 'Save'
